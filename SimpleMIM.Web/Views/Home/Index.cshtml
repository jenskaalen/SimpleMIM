@{
    ViewBag.Title = "Home Page";
}


<div ng-controller="flowController">
    <div class="row bot-margin-2">
        <div class="col-xs-6">
            <div class="h3">Mock user: {{ objectType }}</div>

            <div class="row" ng-repeat="attrib in attribs">
                <div class="col-xs-2">
                    <div class="pull-right">{{ attrib.Name }}</div>
                </div>
                <div class="col-xs-4 pull-left">
                    <div>{{ attrib.Value }}</div>
                </div>
            </div>
        </div>

        <div class="col-xs-6">
            <select ng-options="rule as rule.Name in flowRules"></select>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-4">
            <input class="form-control" ng-model="funcName" placeholder="Function name" />
        </div>
    </div>

    <div class="row">
        <div class="col-xs-6">
            @*ng-style="{'height': '500px', 'width': '600px'}"*@
            <textarea cols="80" rows="25" ng-model="script" id="textbox"></textarea>

            <button ng-disabled="!funcName" class="btn btn-success" ng-click="compilePython()">Compile python</button>
            <button ng-disabled="!compiled" class="btn btn-success" ng-click="testFunction()">Test</button>
        </div>

        @* result *@
        <div class="col-xs-6">
            <div class="h4">Test result: {{ result }}</div>
        </div>
    </div>
</div>